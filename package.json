{
  "name": "shunmugam-textiles",
  "version": "1.0.0",
  "description": "Shunmugam Textiles Management System - Full Stack Application",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "server": "nodemon server/app.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "render-postbuild": "npm run install-client && npm run build",
    "init-data": "node server/scripts/initializeData.js",
    "setup-auth": "node setup-firebase-auth.js",
    "deploy-check": "node deploy-setup.js"
  },
  "keywords": [
    "textiles",
    "management",
    "react",
    "nodejs",
    "firebase"
  ],
  "author": "Shunmugam Textiles",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  }
}
